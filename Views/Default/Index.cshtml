
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}



<!-- Feature Section -->
@Html.Action("DefaultFeature")
<!-- /Feature Section -->
<!-- About Section -->
@Html.Action("DefaultAbout")
<!-- /About Section -->
<!-- Service Section -->
@Html.Action("DefaultService")<!-- /Why Us Section -->
<!-- Stats Section -->
<section id="stats" class="stats section dark-background">
    <img src="~/Templates/yummy-red-1.0.0/assets/img/stats-bg.jpg" alt="" data-aos="fade-in">
    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4">
            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.chefCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Şefler</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.eventCount</span> 
                    <p>Etkinlik Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.AvgPrice.ToString("0.00")</span>
                    <p>Ortalama Fiyat</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span>@ViewBag.productCount</span>
                    <p>Ürünler</p>
                </div>
            </div><!-- End Stats Item -->
        </div>
    </div>
</section><!-- /Stats Section -->
<!-- /Stats Section -->
