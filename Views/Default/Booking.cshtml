

<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Rezervasyon Yap</h2>
        <p><span>Rezervasyonu</span> <span class="description-title">Bizimle Yapın<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">



            <div class="col-lg-4 reservation-img" style="background-image: url('@Url.Content("~/img/reservation.jpg")');"></div>




            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                <form action="/Default/Booking" method="post" role="form">
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <input type="text" name="Name" class="form-control" placeholder="Adınız" required />
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="email" name="Email" class="form-control" placeholder="Email" required />
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" name="PhonenNumber" class="form-control" placeholder="Telefon Numaranız" required />
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="date" name="BookingDate" class="form-control" required />
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="time" name="BookingDate" class="form-control" required />
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="number" name="PersonCount" class="form-control" placeholder="Kaç Kişi" required />
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea name="MessageContent" class="form-control" rows="5" placeholder="Mesajınız"></textarea>
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-outline-danger">Rezerasyonu Yap</button>
                    </div>
                </form>
            </div><!-- End Reservation Form -->
        </div>
        </div>

</section>
