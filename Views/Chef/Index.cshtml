@model List<YummyProject.Models.Chef>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Şefler</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Foto Url</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ChefId</td>
            <td>@item.Name</td>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px;" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Chef/CreateChef" class="btn btn-primary">Yeni Şef Ekle</a>

