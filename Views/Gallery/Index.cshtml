@model List<YummyProject.Models.PhotoGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Galeri</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Fotoğraf</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>@item.PhotoGalleryId</td>
            <td><img src="@item.ImageUrl" style="width:150px;height:150px;" /></td>
            <td><a href="/Gallery/DeleteGallery/@item.PhotoGalleryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Gallery/UpdateGallery/@item.PhotoGalleryId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Gallery/CreateGallery" class="btn btn-primary">Galeriye Resim Ekle</a>

